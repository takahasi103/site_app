<div class="container">
  <div class="row">
    <div class="col-4 off-set-" >
      <h2>ジャンル一覧・追加</h2>
      <%= render 'form', genre: @genre %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to '編集', edit_genre_path(genre) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
