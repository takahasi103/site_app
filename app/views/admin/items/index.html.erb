<h2>商品一覧</h2>
<div>
  <%= link_to "新規登録", new_admin_item_path %>
</div>
<table>
  <thead>
    <tr>
      <th></th>
        <th>商品名</th>
        <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= attachment_image_tag item, :image,format: 'jpeg', size: "100x100" %>
        </td>
        <td class="pr-3">
          <%= link_to item.name, edit_admin_item_path(item) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>