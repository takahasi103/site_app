<div class="container">
  <div class="row">
    <div class="col-7 off-set-5">
      <h2>新規商品登録</h2>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label "ジャンル" %>
          <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>
        </div>
        <div class="form-group">
          <%= f.label "商品名" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "商品画像" %>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.label "商品説明" %>
          <%= text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "価格(税抜)" %>
          <%= f.text_field :price, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "販売ステータス" %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>