<div class="container">
  <div class="row">
    <h2>新規商品登録</h2>
    <%= form_with model: @item do %>
      <div class="form-group">
        <%= f.label "ジャンル" %>
      </div>
      <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "画像" %>
        <%= f.attachment_field :image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= text_area :introduction, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "価格(税抜)" %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "販売ステータス" %>
        <%= f.radio_button :is_active, :true, class: 'form-control' %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false, class: 'form-control' %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>